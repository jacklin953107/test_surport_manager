<h2>事件標題：<%= @event.title %></h2>
<br>
<table class="table table-striped">
  <thead>
    <th>訊息內容</th>
    <th>修正欄位</th>
    <th>修正訊息</th>
    <th>刪除訊息</th>
  </thead>
  <% @messages.each do |message| %>
  <tbody>
    <tr>
      <td><%= message.name %></td>
      <td><%= link_to '單獨觀看訊息', event_message_path(@event, message) %></td>
      <td><%= link_to '我想修正', edit_event_message_path(@event, message) %></td>
      <td><%= button_to '我想刪除', event_message_path(@event, message), :method => :delete %></td>
    </tr>
  </tbody>
  <% end %>
</table>


<%= link_to '新增訊息', new_event_message_path(@event) %>
<p><%= link_to '回災情事件總覽', :controller => 'events', :action => 'index' %></p>